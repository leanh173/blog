<h4>Comment:</h4>
<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.hidden_field :entry_id,value: @entry.id %>
    <%= f.text_area :comment_content, placeholder: "Comment..." %>
  </div>
  <%= f.submit "Add comment", class: "btn btn-large btn-primary" %>
<% end %>