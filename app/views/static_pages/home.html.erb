<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
       <section>
        <%= render 'shared/stats' %>
        </section>
      <section>
        <%= link_to "Write an Entry!", new_entry_path,
                                class: "btn btn-large btn-primary" %>
      </section>
    </aside>
    <div class="span8">
      <h3>Blogs</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to My Blog</h1>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>
  <h1>Blog</h1>
  <%= render 'shared/feed' %>
<% end %>